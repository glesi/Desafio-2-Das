@model Desafio2_Cartelera_Cine.Models.Calificacion

@{ ViewBag.Title = "Agregar Calificación"; }

<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
    }

    .form-control {
        background-color: #2a2a2a;
        border-color: #444444;
        color: #fff;
    }

        .form-control:focus {
            background-color: #333333;
            border-color: #ff6f61;
            box-shadow: 0 0 0 0.2rem rgba(255, 111, 97, 0.25);
        }

    .btn-primary {
        background-color: #ff6f61;
        border-color: #ff6f61;
    }

        .btn-primary:hover {
            background-color: #ff5548;
            border-color: #ff5548;
        }
</style>

<div class="container my-5">
    <h2 class="mb-4">Agregar Calificación</h2>

    @using (Html.BeginForm("Create", "Calificaciones", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Calificar, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Calificar, new { @class = "form-control", type = "number", min = "1", max = "5", required = "required" })
            @Html.ValidationMessageFor(model => model.Calificar, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Agregar Calificación</button>
    }
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('form').submit(function () {
                var calificacion = parseInt($('#Calificar').val());
                if (calificacion < 1 || calificacion > 5 || isNaN(calificacion)) {
                    alert('La calificación debe ser un número entre 1 y 5.');
                    return false;
                }
                return true;
            });
        });
    </script>
}