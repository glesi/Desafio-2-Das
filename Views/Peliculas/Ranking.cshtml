@model IEnumerable<Desafio2_Cartelera_Cine.Models.RankingPelicula>

@{ ViewBag.Title = "Ranking de Películas"; }

<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
    }

    .chart-container {
        position: relative;
        height: 500px;
        width: 100%;
    }
</style>

<div class="container my-5">
    <h2 class="mb-4">Ranking de Películas</h2>

    <div class="chart-container">
        <canvas id="rankingChart"></canvas>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('rankingChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Encode(Model.Select(m => m.Titulo))),
                    datasets: [{
                        label: 'Promedio de Calificaciones',
                        data: @Html.Raw(Json.Encode(Model.Select(m => m.PromedioCalificacion))),
                        backgroundColor: 'rgba(255, 111, 97, 0.5)',
                        borderColor: 'rgba(255, 111, 97, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#fff'
                            }
                        }
                    },
                    scales: {
                        x: {
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.2)'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.2)'
                            },
                            suggestedMax: 5 // Ajusta este valor según tus necesidades
                        }
                    }
                }
            });
        });
    </script>
}